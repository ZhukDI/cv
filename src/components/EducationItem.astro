---
import type {Education} from "../data/cv";

interface Props extends Education {
}

const {school, degree, start, end} = Astro.props;
---
<article role="article">
    <div class="rounded-lg bg-card text-card-foreground">
        <div class="flex flex-col space-y-1.5">
            <div class="flex items-center justify-between gap-x-2 text-base">
                <h3 class="font-semibold leading-none">
                    {school}
                </h3>
                <div class="text-sm tabular-nums text-gray-500" aria-label=`Period: ${start} to ${end}`>
                    {start} - {end}
                </div>
            </div>
        </div>
        <div class="text-pretty font-mono text-sm mt-2 text-foreground/80 print:text-[12px]">
            {degree}
        </div>
    </div>
</article>